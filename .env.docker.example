# Docker Compose 环境变量示例
# 复制此文件为 .env 来自定义配置

# 应用配置
APP_NAME=kk-nav
APP_ENV=production
APP_PORT=8080
APP_DEBUG=false

# 数据库配置
DB_TYPE=postgres
DB_HOST=postgres
DB_PORT=5432
DB_NAME=kk_nav
DB_USER=kk_nav
DB_PASSWORD=kk_nav_password
DB_SSL_MODE=disable

# JWT配置（生产环境必须修改）
JWT_SECRET=change-me-in-production-please-modify-this-secret-key
JWT_EXPIRE_HOURS=24

# 默认管理员配置（首次启动时创建，生产环境必须修改）
ADMIN_EMAIL=admin@example.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
